<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/class_three_item_header"
        android:layout_width="wrap_content"
        android:text="@string/class_time_three_select_days"
        android:layout_margin="16dp"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginEnd="8dp"
        android:layout_height="wrap_content">

            <ImageView android:layout_weight="1"
                android:id="@+id/class_three_sunday"
                android:layout_width="0dp"
                android:layout_height="46dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/ui_saturday_sunday_unselected" />

            <ImageView android:layout_weight="1"
                android:id="@+id/class_three_monday"
                android:layout_width="0dp"
                android:layout_height="46dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/ui_monday_unselected" />

            <ImageView android:layout_weight="1"
                android:id="@+id/class_three_tuesday"
                android:layout_width="0dp"
                android:layout_height="46dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/ui_tuesday_thursday_unselected" />

            <ImageView android:layout_weight="1"
                android:id="@+id/class_three_wednesday"
                android:layout_width="0dp"
                android:layout_height="46dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/ui_wednesday_unselected" />

            <ImageView android:layout_weight="1"
                android:id="@+id/class_three_thursday"
                android:layout_width="0dp"
                android:layout_height="46dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/ui_tuesday_thursday_unselected" />

            <ImageView
                android:id="@+id/class_three_friday"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="46dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/ui_friday_unselected" />

            <ImageView
                android:id="@+id/class_three_saturday"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="46dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/ui_saturday_sunday_unselected" />

        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_marginTop="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/new_schedule_time_in"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <EditText
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginEnd="16dp"
                android:textColor="@color/black"
                android:focusable="false"
                android:layout_weight="1"
                android:clickable="true"
                android:id="@+id/field_new_schedule_timein"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_marginTop="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/new_schedule_time_out"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <EditText
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginEnd="16dp"
                android:textColor="@color/black"
                android:focusable="false"
                android:layout_weight="1"
                android:clickable="true"
                android:id="@+id/field_new_schedule_timeout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </LinearLayout>



</LinearLayout>