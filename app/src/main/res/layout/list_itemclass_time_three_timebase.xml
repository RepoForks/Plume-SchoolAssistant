<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/class_three_item_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                android:id="@+id/class_three_sunday"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="@string/class_time_three_sunday" />

            <Button
                android:id="@+id/class_three_monday"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="@string/class_time_three_monday" />

            <Button
                android:id="@+id/class_three_tuesday"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="@string/class_time_three_tuesday" />

            <Button
                android:id="@+id/class_three_wednesday"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="@string/class_time_three_wednesday" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                android:id="@+id/class_three_thursday"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="@string/class_time_three_thursday" />

            <Button
                android:id="@+id/class_three_friday"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="@string/class_time_three_friday" />

            <Button
                android:id="@+id/class_three_saturday"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="@string/class_time_three_saturday" />

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/field_new_schedule_timein"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/new_schedule_time_in"
        android:text="@string/new_schedule_time_in"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/field_new_schedule_timeout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/new_schedule_time_out"
        android:text="@string/new_schedule_time_out"
        android:textAppearance="?android:attr/textAppearanceMedium" />

</LinearLayout>