<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context="com.pdt.plume.ScheduleDetailFragment">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/appbar_padding_top"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

        <TextView
            android:id="@+id/schedule_detail_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="40sp"
            android:textColor="@color/white"
            android:layout_marginTop="60dp"
            android:layout_marginLeft="72dp"
            android:layout_marginStart="72dp"
            android:layout_marginBottom="20dp"
            android:text="Maths"/>

    </android.support.design.widget.AppBarLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:layout_marginTop="48dp"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/schedule_detail_teacher_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_person_black"
            android:tint="@color/gray_700"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"/>
        <TextView
            android:id="@+id/schedule_detail_teacher"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/black"
            android:layout_toRightOf="@id/schedule_detail_teacher_icon"
            android:layout_toEndOf="@id/schedule_detail_teacher_icon"
            android:text="Mr Ali"
            android:layout_marginLeft="40dp"
            android:layout_marginStart="40dp"/>
        <TextView
            android:id="@+id/schedule_detail_teacher_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/gray_700"
            android:layout_toRightOf="@id/schedule_detail_teacher_icon"
            android:layout_toEndOf="@id/schedule_detail_teacher_icon"
            android:layout_below="@id/schedule_detail_teacher"
            android:text="@string/schedule_detail_teacher_subtitle"
            android:layout_marginLeft="40dp"
            android:layout_marginStart="40dp"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/schedule_detail_room_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_location_black"
            android:tint="@color/gray_700"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"/>
        <TextView
            android:id="@+id/schedule_detail_room"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/black"
            android:layout_toRightOf="@id/schedule_detail_room_icon"
            android:layout_toEndOf="@id/schedule_detail_room_icon"
            android:text="103"
            android:layout_marginLeft="40dp"
            android:layout_marginStart="40dp"/>
        <TextView
            android:id="@+id/schedule_detail_room_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/gray_700"
            android:layout_toRightOf="@id/schedule_detail_room_icon"
            android:layout_toEndOf="@id/schedule_detail_room_icon"
            android:layout_below="@id/schedule_detail_room"
            android:text="@string/schedule_detail_room_subtitle"
            android:layout_marginLeft="40dp"
            android:layout_marginStart="40dp"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="72dp"
        android:layout_marginStart="72dp"
        android:layout_marginTop="8dp"
        android:background="@color/dividerColor" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/schedule_detail_periods_title"
        android:textColor="@color/black_0.54"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"/>

    <com.pdt.plume.NonScrollListView
        android:id="@+id/schedule_detail_periods_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp" />

</LinearLayout>
