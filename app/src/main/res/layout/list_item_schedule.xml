<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/touch_selector"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:layout_marginTop="6dp"
    android:layout_marginBottom="6dp"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/schedule_icon"
            android:transitionName="@string/transition_schedule"
            android:minHeight="48dp"
            android:minWidth="48dp"
            android:layout_gravity="center"
            android:layout_width="56dp"
            android:layout_height="56dp" />

        <TextView
            android:id="@+id/schedule_lesson"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black_0.87"
            android:layout_marginLeft="8dp"
            android:layout_gravity="center_vertical"
            android:textSize="24sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:gravity="end"
        android:orientation="vertical">
        <TextView
            android:id="@+id/schedule_teacher"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@color/black_0.54"
            android:layout_marginTop="9dp"/>
        <TextView
            android:id="@+id/schedule_room"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/black_0.54"
            android:layout_marginTop="8dp"/>
        <TextView
            android:id="@+id/schedule_time_in"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:layout_marginBottom="6dp"
            android:textColor="@color/black_0.54"/>

    </LinearLayout>




</FrameLayout>