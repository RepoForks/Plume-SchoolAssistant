<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:elevation="4dp"
    android:background="@color/colorPrimary"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/class_three_cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1">
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_close_black_24dp"
                android:tint="@color/white"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="@string/cancel"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="8dp"
                android:textSize="18sp"/>
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />
        </LinearLayout>
        <View
            android:layout_width="1dp"
            android:layout_height="24dp"
            android:background="@color/white" />
        <LinearLayout
            android:id="@+id/class_three_done"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_weight="1"
            android:orientation="horizontal">
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_check_white"
                android:tint="@color/white"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="@string/save"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="8dp"
                android:textSize="18sp"/>
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/class_time_one_value"
        android:layout_marginTop="12dp"
        android:textColor="@color/gray_200"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/class_time_two_value"
        android:layout_marginTop="4dp"
        android:layout_width="wrap_content"
        android:textColor="@color/gray_200"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/class_three_item_header"
        android:layout_width="wrap_content"
        android:layout_marginTop="12dp"
        android:text="@string/class_time_three_select_days"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:layout_height="wrap_content" />
    <View
        android:layout_width="32dp"
        android:layout_height="3dp"
        android:background="@color/white"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginTop="4dp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="8dp"
        android:layout_height="wrap_content">

        <TextView android:layout_weight="1"
            android:id="@+id/class_three_sunday"
            android:layout_width="0dp"
            android:layout_height="46dp"
            android:layout_gravity="center_horizontal"
            android:text="@string/sunday_initial"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="32sp"/>

        <TextView android:layout_weight="1"
            android:id="@+id/class_three_monday"
            android:layout_width="0dp"
            android:layout_height="46dp"
            android:layout_gravity="center_horizontal"
            android:text="@string/monday_initial"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="32sp"/>

        <TextView android:layout_weight="1"
            android:id="@+id/class_three_tuesday"
            android:layout_width="0dp"
            android:layout_height="46dp"
            android:layout_gravity="center_horizontal"
            android:text="@string/tuesday_initial"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="32sp"/>

        <TextView android:layout_weight="1"
            android:id="@+id/class_three_wednesday"
            android:layout_width="0dp"
            android:layout_height="46dp"
            android:layout_gravity="center_horizontal"
            android:text="@string/wednesday_initial"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="32sp"/>

        <TextView android:layout_weight="1"
            android:id="@+id/class_three_thursday"
            android:layout_width="0dp"
            android:layout_height="46dp"
            android:layout_gravity="center_horizontal"
            android:text="@string/thursday_initial"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="32sp"/>

        <TextView android:layout_weight="1"
            android:id="@+id/class_three_friday"
            android:layout_width="0dp"
            android:layout_height="46dp"
            android:layout_gravity="center_horizontal"
            android:text="@string/friday_initial"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="32sp"/>

        <TextView android:layout_weight="1"
            android:id="@+id/class_three_saturday"
            android:layout_width="0dp"
            android:layout_height="46dp"
            android:layout_gravity="center_horizontal"
            android:text="@string/saturday_initial"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="32sp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_marginTop="16dp"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginStart="@dimen/activity_horizontal_margin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="@string/new_schedule_time_in"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <EditText
                android:layout_marginLeft="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginRight="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="4dp"
                android:textColor="@color/white"
                android:focusable="false"
                android:clickable="true"
                android:background="@android:color/transparent"
                android:id="@+id/field_new_schedule_timein"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <View
                android:layout_width="46dp"
                android:layout_height="1dp"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="4dp"
                android:background="@color/gray_100"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_marginTop="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/new_schedule_time_out"
                android:textColor="@color/white"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <EditText
                android:layout_marginLeft="18dp"
                android:layout_marginStart="18dp"
                android:layout_marginTop="4dp"
                android:background="@android:color/transparent"
                android:layout_marginRight="16dp"
                android:layout_marginEnd="16dp"
                android:textColor="@color/white"
                android:focusable="false"
                android:clickable="true"
                android:id="@+id/field_new_schedule_timeout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <View
                android:layout_width="46dp"
                android:layout_height="1dp"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="4dp"
                android:background="@color/gray_100"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/class_time_three_week_type_alt_layout"
        android:layout_width="match_parent"
        android:layout_marginTop="12dp"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/class_three_item_header_alt"
            android:layout_width="wrap_content"
            android:text="@string/week_two"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:layout_height="wrap_content" />

        <View
            android:layout_width="32dp"
            android:layout_height="3dp"
            android:background="@color/white"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginTop="4dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="8dp"
            android:layout_height="wrap_content">

            <TextView android:layout_weight="1"
                android:id="@+id/class_three_sunday_alt"
                android:layout_width="0dp"
                android:layout_height="46dp"
                android:layout_gravity="center_horizontal"
                android:text="@string/sunday_initial"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="32sp"/>

            <TextView android:layout_weight="1"
                android:id="@+id/class_three_monday_alt"
                android:layout_width="0dp"
                android:layout_height="46dp"
                android:layout_gravity="center_horizontal"
                android:text="@string/monday_initial"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="32sp"/>

            <TextView android:layout_weight="1"
                android:id="@+id/class_three_tuesday_alt"
                android:layout_width="0dp"
                android:layout_height="46dp"
                android:layout_gravity="center_horizontal"
                android:text="@string/tuesday_initial"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="32sp"/>

            <TextView android:layout_weight="1"
                android:id="@+id/class_three_wednesday_alt"
                android:layout_width="0dp"
                android:layout_height="46dp"
                android:layout_gravity="center_horizontal"
                android:text="@string/wednesday_initial"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="32sp"/>

            <TextView android:layout_weight="1"
                android:id="@+id/class_three_thursday_alt"
                android:layout_width="0dp"
                android:layout_height="46dp"
                android:layout_gravity="center_horizontal"
                android:text="@string/thursday_initial"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="32sp"/>

            <TextView android:layout_weight="1"
                android:id="@+id/class_three_friday_alt"
                android:layout_width="0dp"
                android:layout_height="46dp"
                android:layout_gravity="center_horizontal"
                android:text="@string/friday_initial"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="32sp"/>

            <TextView android:layout_weight="1"
                android:id="@+id/class_three_saturday_alt"
                android:layout_width="0dp"
                android:layout_height="46dp"
                android:layout_gravity="center_horizontal"
                android:text="@string/saturday_initial"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="32sp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_marginTop="16dp"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:layout_marginStart="@dimen/activity_horizontal_margin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:text="@string/new_schedule_time_in"
                    android:textAppearance="?android:attr/textAppearanceSmall" />

                <EditText
                    android:layout_marginLeft="18dp"
                    android:layout_marginStart="18dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginEnd="16dp"
                    android:textColor="@color/white"
                    android:layout_marginTop="4dp"
                    android:focusable="false"
                    android:text="12:00"
                    android:background="@android:color/transparent"
                    android:clickable="true"
                    android:id="@+id/field_new_schedule_timein_alt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <View
                    android:layout_width="46dp"
                    android:layout_height="1dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="4dp"
                    android:background="@color/gray_100"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_marginTop="16dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginStart="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:text="@string/new_schedule_time_out"
                    android:textAppearance="?android:attr/textAppearanceSmall" />

                <EditText
                    android:layout_marginLeft="18dp"
                    android:layout_marginStart="18dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginEnd="16dp"
                    android:text="12:00"
                    android:layout_marginTop="4dp"
                    android:textColor="@color/white"
                    android:focusable="false"
                    android:background="@android:color/transparent"
                    android:clickable="true"
                    android:id="@+id/field_new_schedule_timeout_alt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <View
                    android:layout_width="46dp"
                    android:layout_height="1dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="4dp"
                    android:background="@color/gray_100"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>


</LinearLayout>