<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/class_one_timebased"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:padding="@dimen/activity_horizontal_margin"
        android:orientation="vertical"
        android:gravity="center_horizontal">
        <ImageView
            android:layout_width="128dp"
            android:layout_height="128dp"
            android:src="@drawable/time_based"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/class_time_one_timebased"
            android:gravity="center_horizontal"
            android:textColor="@color/colorPrimary"
            android:textSize="24sp"
            android:layout_marginTop="24dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="italic"
            android:text="@string/dialog_description_timebased"
            android:textColor="@color/gray_900"
            android:textSize="18sp"
            android:gravity="center_horizontal"
            android:layout_marginTop="24dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textStyle="italic"
            android:text="@string/dialog_example_timebased"
            android:textColor="@color/gray_900"
            android:textSize="18sp"
            android:layout_marginTop="24dp"/>
    </LinearLayout>

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/dividerColor" />

    <LinearLayout
        android:id="@+id/class_one_periodbased"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:padding="@dimen/activity_horizontal_margin"
        android:orientation="vertical"
        android:gravity="center_horizontal">
        <ImageView
            android:layout_width="128dp"
            android:layout_height="128dp"
            android:src="@drawable/period_based"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/class_time_one_periodbased"
            android:textColor="@color/colorPrimary"
            android:gravity="center_horizontal"
            android:textSize="24sp"
            android:layout_marginTop="24dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textStyle="italic"
            android:text="@string/dialog_description_periodbased"
            android:textColor="@color/gray_900"
            android:textSize="18sp"
            android:layout_marginTop="24dp"/>

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:gravity="center_horizontal"
            android:textStyle="italic"
            android:text="@string/dialog_example_periodbased"
            android:textColor="@color/gray_900"
            android:textSize="18sp" />
    </LinearLayout>

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/dividerColor" />

    <LinearLayout
        android:id="@+id/class_one_blockbased"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:padding="@dimen/activity_horizontal_margin"
        android:orientation="vertical"
        android:gravity="center_horizontal">
        <ImageView
            android:layout_width="128dp"
            android:layout_height="128dp"
            android:src="@drawable/block_based"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/class_time_one_blockbased"
            android:gravity="center_horizontal"
            android:textColor="@color/colorPrimary"
            android:textSize="24sp"
            android:layout_marginTop="24dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dialog_description_blockbased"
            android:textStyle="italic"
            android:gravity="center_horizontal"
            android:textColor="@color/gray_900"
            android:textSize="18sp"
            android:layout_marginTop="24dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dialog_example_blockbased"
            android:textStyle="italic"
            android:gravity="center_horizontal"
            android:textColor="@color/gray_900"
            android:textSize="18sp"
            android:layout_marginTop="24dp"/>
    </LinearLayout>

</LinearLayout>