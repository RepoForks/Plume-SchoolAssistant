<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/touch_selector"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingBottom="16dp"
    android:paddingTop="16dp">

    <TextView
        android:id="@+id/task_sharer"
        android:paddingLeft="12dp"
        android:paddingStart="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:textColor="@color/black_0.54"
        android:textSize="12sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/task_sharer"
        android:paddingBottom="32dp"
        android:orientation="horizontal">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <ImageView
                android:id="@+id/task_icon"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_gravity="center_vertical" />

            <com.pdt.plume.CircularImageView
                android:id="@+id/task_icon2"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_gravity="center_vertical" />

        </FrameLayout>

        <TextView
            android:id="@+id/task_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:layout_weight="1"
            android:lineSpacingExtra="4dp"
            android:textColor="@color/black_0.87"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="96dp"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:gravity="end"
            android:orientation="vertical">

            <TextView
                android:id="@+id/task_class"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:alpha="0.8"
                android:gravity="end"
                android:textColor="@color/black_0.54"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/task_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:alpha="0.8"
                android:textColor="@color/black_0.54"
                android:textSize="12sp" />

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/task_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:paddingTop="8dp"
        android:textColor="@color/black_0.54"
        android:textSize="12sp" />

</RelativeLayout>